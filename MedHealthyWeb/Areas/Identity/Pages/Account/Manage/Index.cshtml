@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex-container Column" style="display: flex;">
    <form id="profile-form" method="post" style="display: flex;" class="flex-container Column" enctype="multipart/form-data">
        <div class="row-cols-1 col-md-5">
        
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" placeholder="Please choose your username." />
                    <label asp-for="Input.Name" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" disabled />
                    <label asp-for="Email" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <h5>Role: @Model.Input.Role</h5>
            
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        
        </div>
        <div class="col-md-6 row-cols-3 picture">
            <img src="@Model.ImageUrl" style="border-radius:5px; border:1px solid #bbb9b9" />
            <input asp-for="ImageUrl" type="file" name="file" itemid="uploadBox" class="form-control" style="width: 50%"/>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
