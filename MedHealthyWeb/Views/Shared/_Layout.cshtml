@using MedHealth.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedHealthyWeb</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedHealthyWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Patient" asp-controller="Home" asp-action="Index"><img src="/images/health2_red.png" width="50" height="50" /> MedHealthyWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav flex-grow-1" style="justify-content:center; margin-right: 200px;">
                        @if (User.IsInRole(SD.Role_User_Doctor))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Doctor" asp-controller="Doctor" asp-action="Index">Calendar</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_User_Patient))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Patient" asp-action="Index">Medical Card</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Patient" asp-action="BookAppointment">Book Appointment</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_User_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin Panel</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Manage Specialities</a>
                                </div>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MedHealthyWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
